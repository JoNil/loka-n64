{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        /*{
            "label": "format",
            "type": "shell",
            "command": "${command:editor.action.formatDocument}",
        },*/
        {
            "label": "save_all",
            "type": "shell",
            "command": "${command:workbench.action.files.saveAll}",
            //"dependsOn": "format",
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cargo build --bin game",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "save_all",
        },
        {
            "label": "build_start",
            "type": "shell",
            "command": "${command:workbench.debug.action.toggleRepl}",
            "dependsOn": "build",
        },
        {
            "label": "close_panel",
            "type": "shell",
            "command": "${command:workbench.action.closePanel}",
        },
        {
            "label": "go_to_editor",
            "type": "shell",
            "command": "${command:workbench.view.explorer}",
            "dependsOn": "close_panel",
        },
    ]
}